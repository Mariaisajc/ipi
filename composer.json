{
    "name": "ipi/innovation-performance-index",
    "description": "Sistema de construcción y respuesta de formularios para evaluar el desempeño de innovación en empresas",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "phpoffice/phpspreadsheet": "^1.29"
    },
    "require-dev": {
        "symfony/var-dumper": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Core\\": "core/",
            "Controllers\\": "controllers/",
            "Models\\": "models/",
            "Services\\": "services/",
            "Middleware\\": "middleware/"
        },
        "files": [
            "helpers/functions.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}